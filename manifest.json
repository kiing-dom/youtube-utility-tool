{
    "manifest_version": 3,
    "name": "YouTility",
    "version": "1.0",
    "description": "A collection of useful utility functions to enhance your YouTube experience",
    "permissions": [
      "activeTab",
      "tabs",
      "storage",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "./icons/youtility-icon-16.jpg",
        "48": "./icons/youtility-icon-48.jpg",
        "128": "./icons/youtility-icon-128.jpg"
      }
    },
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  