{
    "manifest_version": 3,
    "name": "YouTility",
    "version": "1.0",
    "description": "Youtube Utility (YouTility) tool to enhance your experience.",
    "permissions": [
      "activeTab",
      "scripting",
      "storage",
      "tabs",
      "https://www.youtube.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://www.youtube.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  